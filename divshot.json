{
  "name": "circlehq",
  "root": "./",
  "clean_urls": true,
  "error_page": "error.html",
  "routes": {
    "**": "index.html"
  },
  "exclude": [
    "legacy",
    "node_modules",
    "divshot.json",
    "__mocks__",
    "src",
    ".gitignore",
    "README.md",
    "package.json",
    "server.coffee"
  ],
  "forms": {
    "contact": {
      "to": "hello@circlehq.co",
      "from": "contact@circlehq.co",
      "replyTo": "{{name}} <{{email}}>",
      "subject": "Contact Received from {{name}}",
      "html": "<b>Name:</b> {{name}}<br /><b>Title:</b> {{title}}<br /><b>Company:</b> {{company}}",
      "text": "Name: {{name}}, Title: {{title}}, Company: {{company}}",
      "success": "/",
      "failure": "/"
    }
  }
}
